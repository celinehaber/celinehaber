def factorielle(n):
    if n < 0:
        return "La factorielle n'est pas définie pour les nombres négatifs."
    elif n == 0 or n == 1:
        return 1
    else:
        resultat = 1
        for i in range(2, n + 1):
            resultat *= i
        return resultat
factorielle(7)

def inverser_chaine(chaine):
    return chaine[::-1]

texte = "celinehaber"
texte_inverse = inverser_chaine(texte)
print(texte_inverse)

          
